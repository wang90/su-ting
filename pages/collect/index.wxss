/* pages/collect/index.wxss */

.collect-null {
  padding: 16px;
}
.collect-null .image {
  height: 179px;
  /* background: #E8E8E8; */
  margin-bottom: 16px;
}
.collect-null .image > image {
  width: 100%;
  height: 100%;
  border-radius: 6px;
}
.collect-null .description {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  text-align: center;
  margin-bottom: 16px;
}
.collect-null .button {
  margin: 0 auto;
  width: 230px;
  height: 35px;
  background: #0092F6;
  border-radius: 18px;
  line-height: 35px;
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
}

.collect-list {
  padding: 16px;
}
.collect-list .title {
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16px;
}
.sort-content {
  padding: 16px;
}