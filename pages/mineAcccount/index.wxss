/* pages/mineAcccount/index.wxss */
.mine-page {
  background: #F8F8F8;
  padding: 16px;
}
.mine-page .list  {
  margin-bottom: 30px;
}
.mine-page .list .card {
  background: #FFFFFF;
  border-radius: 8px;
  padding: 24px 16px;
  display: flex;
  align-items: center;
}
.mine-page .list .card .image {
  flex: 0 0 64px;
  height: 64px;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
}
.mine-page .list .card .image .upload {
  position: absolute;
  bottom: 0;
  width: 100%;
  font-size: 10px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  padding-top: 2px;
  padding-bottom: 7px;
  color: #FFFFFF;
  background-color: rgba(0, 0, 0, 0.5);
  text-align: center;
}
.mine-page .list .card .image > image{
  width: 64px;
  height: 64px;
  display: block;
}
.mine-page .list .card .info {
  padding-left: 16px;
}
.mine-page .list .card .info .title {
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  margin-bottom: 6px;
}
.mine-page .list .card .info .phone {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}


.mine-page .button-list .button {
  width: 230px;
  height: 35px; 
  background: #0092F6;
  border-radius: 18px;
  text-align: center;
  line-height: 35px;
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  margin: 0 auto;
}