/* pages/contactPerson/index.wxss */
.person-page {
  padding: 16px 16px;
  background: #F8F8F8;
  padding-bottom: 150px;
}
.person-page .list .item {
  background: #fff;
  background: #FFFFFF;
  border-radius: 8px;
  padding: 20px 16px;
  position: relative;
  margin-bottom: 16px;
  transition:  all 0.4s;
  border: 1px solid #fff;
}
.person-page .list .item.active {
  border-color:  rgba(0, 146, 246,1);
}
.person-page .list .item .icon {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  position: absolute;
  top:20px;
  right: 16px;
  border: 1px solid #F8F8F8;
  z-index: 300;
}
.person-page .list .item .background {
  width: 87px;
  height: 63px;
  position: absolute;
  bottom: 0;
  right: 0;
}
.person-page .list .item .background image,
.person-page .list .item .icon image{
  width: 100%;
  height: 100%;
}
.person-page .list .item .title {
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12px;
}
.person-page .list .item .info {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
}
.person-page .list .item .info.code {
  margin-bottom: 14px;
}
.person-page .list .item .info .info-title {
  width: 68px;
  display: inline-block;
}
.button-box {
  padding-top: 18px;
}
.button-box .button {
  position: fixed;
  left: 50%;
  bottom: 100px;
  transform: translateX(-50%);
  width: 230px;
  height: 35px;
  background: #0092F6;
  border-radius: 18px;
  margin: 0 auto;
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
  line-height: 35px;
}

.button-box .add-more{
  position: fixed;
  left: 50%;
  bottom: 60px;
  transform: translateX(-50%);
  width: 230px;
  height: 35px;
  font-size: 12px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #0092F6;
  text-align: center;
  line-height: 35px;
}