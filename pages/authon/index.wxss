/* pages/authon/index.wxss */
page::after{
  background-color: #F8F8F8;
}

.block-line {
  height: 16px;
}
.authon-title {
  display: flex;
  background: rgba(0, 146, 246, 0.1);
  border-radius: 8px;
  margin-left:12px;
  margin-right: 12px;
  padding: 17px 16px;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #0092F6;
  margin-bottom: 12px;
}
.authon-title  .tips {
  flex: 0 0 48px;
  width: 48px;
  height: 48px;
  margin-right: 12px;
}
.authon-title  .tips > image {
  width: 100%;
  height: 100%;
}
.authon-message {
  margin-left: 12px;
  margin-right: 12px;
  background: #FFFFFF;
  border-radius: 8px;
  margin-bottom: 12px;
}


.authon-list .card {
  display: flex;
  align-items: center;
  padding-left: 15px;
}
.authon-list .card > image { 
  width: 24px;
  height: 24px;
}

.authon-image {
  padding: 20px;
  margin-bottom: 32px;
}
.authon-image .title {
  font-size: 14px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16px;
}
.authon-image .images-box {
  justify-content: space-between;
  width: 100%;
  display: flex;
}
.authon-image .images-box  > view{
  flex: 0 0 47%;
}
.authon-image .images-box  .image-code {
  display: flex;
  flex-direction: column;
  height: 196px;
  justify-content: space-between;
}
.authon-image .images-box  .image-code > view {
  height: 90px;
  background: #FFFFFF;
  border-radius: 8px;
  border: 1px solid #EFEFEF;
  width: 100%;
}
.authon-image .images-box .image-man {
  /* width: 100%; */
  height: 196px;
  border-radius: 8px;
  border: 1px solid #EFEFEF;
}
.authon-image .images-box .image-man .button,
.authon-image .images-box  .image-code > view.image-last .button, 
.authon-image .images-box  .image-code > view.image-pre .button {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  height: 100%;
  width: 100%;
}

.authon-image .images-box .image-man .image,
.authon-image .images-box  .image-code > view.image-last .image, 
.authon-image .images-box  .image-code > view.image-pre .image {
  height: 100%;
  width: 100%;
}



.authon-image .images-box .image-man .icon,
.authon-image .images-box  .image-code > view.image-last .icon, 
.authon-image .images-box  .image-code > view.image-pre .icon {
  width: 32px;
  height: 32px;
  margin-bottom: 8px;
}

.authon-image .images-box .image-man .em,
.authon-image .images-box  .image-code > view.image-last .em, 
.authon-image .images-box  .image-code > view.image-pre .em {
  color: #0092F6;
}


.authon-button {
  width: 230px;
  height: 35px;
  background: #0092F6;
  border-radius: 18px;
  margin: 0 auto;
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
  line-height: 35px;
}


.datetime-picker {
  position: fixed;
  bottom:0;
  left:0;
  right: 0;
  background: rgba(0,0,0,0.5);
  top:0;
  z-index: 999;
}
.datetime-picker .picker{
  position: absolute;
  bottom:0;
  left:0;
  right: 0;
}