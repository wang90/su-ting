/* pages/datepage/index.wxss */
.date-list { 
  padding: 120px 16px 100px;
}
.calendar {
  --calendar-height: 500px;
}
.van-calendar__day {
  border-radius: 4px !important;
  width: 14.28% !important;
  height:56px !important;
  margin-bottom: 8px !important;
}
.van-calendar__day--middle {
  background: rgba(0, 146, 246, 0.2) !important;
  font-size: 14px  !important;
  font-family: PingFangSC-Medium, PingFang SC  !important;
  font-weight: 500  !important;
  color: #333333  !important;
}
.entry-house-box {
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16px;
  border-bottom: 1px solid #EFEFEF;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  background-color: #fff;
  height: 90px;
  z-index: 99;
  padding-top: 85px;
}
.entry-house-box .during {
  width: 83px;
  display:flex;
  justify-content: center;
  align-items: center;
}
.entry-house-box .during  > view{
  padding: 3px 12px;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  border-radius: 14px;
  border: 1px solid #EFEFEF;
  height: 23px;
  line-height: 23px;
  /* box-sizing: border-box; */
}
.entry-house-box .date-card {
  height: 71px;
  flex: 1;
  text-align: center;
  background: #F9F9F9;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.entry-house-box .date-card .title {
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
}
.entry-house-box .date-card .date {
  font-size: 16px;
  font-family: DINPro-Black, DINPro;
  font-weight: 900;
  color: #0092F6;
  padding-top: 8px;
}

.date-button-list {
  padding: 0 16px;
  position: fixed;
  bottom: 0;
  height: 56px;
  display: flex;
  align-items: center;
  left: 0;
  right:0;
  background: #FEFFFE;
  box-shadow: 0px -2px 4px 0px rgba(43, 26, 26, 0.05);
  padding-bottom: 34px;
  z-index: 99;
}
.date-button-list  > view {
  text-align: center;
  height:33px;
  line-height: 33px;
}
.date-button-list .clear{
  background: #F4F4F4;
  border-radius: 100px;
  flex: 1;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  margin-right: 8px;
}
.date-button-list .save{
  background: #0092F6;
  border-radius: 100px;
  flex: 2;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  
  color: #FFFFFF;
}