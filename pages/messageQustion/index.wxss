page::after {
  background-color: #fff;
}
.message {
  padding:  16px 0;
}
.message .card .title .van-field__error-message {
  bottom: -25px;
}
.message .card .city {
  padding-top: 40px; 
  padding-bottom: 40px;
  padding-left:16px;
}
.message .card .city .city-button {
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #0092F6;
  border-radius: 16px;
  border: 1px solid #0092F6;
  display: inline-block;
  padding: 6px 16px;
  cursor: pointer;
}
.message .card .button {
  width: 230px;
  height: 35px;
  line-height: 35px;
  background: rgba(0, 146, 246, 0.5);
  border-radius: 18px;
  text-align: center;
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  margin:0 auto;
}
.message .card .button.active {
  background: rgba(0, 146, 246, 1);
}

.van-field__body.van-field__body--textarea {
  background: #F8F8F8;
  border-radius: 8px;
  padding: 16px 12px;
}
.van-field__error-message {
  position: absolute;
  bottom: 0;
  left: 16px;
}