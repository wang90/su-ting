/* components/list-button/index.wxss */
.list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.list.button {
  justify-content: space-between;
}
.list .item {

}

.list .item.button {
  flex: 0 0 24%;
  font-size: 12px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  width: 23%;
  height: 33px;
  border-radius: 17px;
  text-align: center;
  line-height:33px;
  box-sizing: border-box;
  background: #F4F4F4;
  border: 1px solid #F4F4F4;
  color: #666666;
  transition: all 0.2s;
  margin-bottom: 12px;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
}
.list .item.button .small {
  font-size: 10px;
}
.list .item.button:last-child{
  margin-right: 0;
}
.list .item.button.active {
  border-color:#0092F6;
  color: #0092F6;
  background:#fff;
}


.list .item.card-button {
  flex: 0 0 20%;
  margin-bottom:16px;
}
.list .item.card-button .image {
  width: 20px;
  height: 20px;
  display: block;
  margin: 10px auto;
}
.list .item.card-button .image image{
  width: 100%;
  height: 100%;
}
.list .item.card-button .text {
  font-size: 12px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500; 
  color: #999999;
  text-align: center;
}
.list .item.card-button.active .text {
  color: #0092F6;
} 