/* components/to-payfor-button/index.wxss */

/* 预定 */
.pay-for-button {
  position: fixed;
  bottom: 0;
  width: 100%;
  /* height: 54px; */
  background: #FFFFFF;
  box-shadow: 0px -4px 8px 0px rgba(0, 0, 0, 0.03);
  z-index: 1000;
  
  display: flex;
  justify-content: space-between;
  padding-left: 16px;
  padding-top: 10px;
  padding-right: 16px;
  padding-bottom: 34px;
  box-sizing: border-box;
}
.pay-for-button > view {
  width: 50%;
  min-width: 0;
}
.pay-for-button .pay-for-info {
  align-items: center;
  display: flex;
  flex-wrap: nowrap;
}
.pay-for-button .pay-for-info .info-speed {
  
}
.pay-for-button .pay-for-info .info-speed  .money .cur {
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FF0011;
}
.pay-for-button .pay-for-info .info-speed  .money .uniy{
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
}
.pay-for-button .pay-for-info .info-speed  .des {
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  text-decoration: line-through;
}
.pay-for-button .pay-for-info  .special {
  font-size: 10px;
  font-family: PingFangSC-Semibold, PingFang SC;  
  font-weight: 600;
  color: #FF0011;
  background: linear-gradient(160deg, rgba(255, 91, 0, 0.1) 0%,rgba(255, 0, 17, 0.1) 100%);
  border-radius: 4px;
  padding: 2px 5px;
  max-width: 85px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-left:8px;
}
.pay-for-button  .pay-other {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pay-for-button  .pay-other .call-phone {
  font-size: 10px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #0092F6;
  text-align: center;
  margin-left: 10px;
}
.pay-for-button  .pay-other .call-phone .icon {
  width: 20px;
  height: 20px;
  margin-bottom: 4px;
}
.pay-for-button  .pay-other .call-phone .icon image {
  width: 100%;
  height: 100%;
}
.pay-for-button  .pay-other .ord-button {
  background: linear-gradient(165deg, #00C4FB 0%, #0092F6 100%);
  box-shadow: 0px 8px 10px -6px rgba(0, 124, 178, 0.44);
  border-radius: 19px;
  width: 116px;
  height: 35px;
  line-height: 35px;
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
}