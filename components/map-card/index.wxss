/* components/map-card/index.wxss */
.map-box {
  height: 70px;
  /* background: cornflowerblue; */
  width: 100%;
  border-radius: 8px;
  margin: 12px 0;
  color: #fff;
  text-align: center;
  line-height: 70px;
  overflow: hidden;
  position: relative;
}
.map-box .map{
  width: 100%;
  height: 100%;
}
.map-box .tips {
  position: absolute;
  font-size: 14px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  background: rgba(0,0,0,0.3);
  border-radius: 0px 0px 8px 0px;
  left:0;
  top: 0;
  height: 28px;
  width: 73px;
  text-align: center;
  line-height: 28px;
  z-index: 99;
}
