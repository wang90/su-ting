
.header { 
  height: 44px;
  padding-left:12px;
  padding-right: 12px;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24px;
  box-sizing: border-box;
}
.header-fixed {
  position: fixed;
  z-index: 9999;
  background: #fff;
  display: flex;
  top:0;
  left:0;
  right: 0;
}
.header .left,
.header .right{
  width: 24px;
  height:24px;
}
.header .left {
  padding-left: 12px;
}
.header  .right{
  padding-right: 12px;
}
.header > view.left  image {
  width: 100%;
  height: 100%;
}
.header-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}